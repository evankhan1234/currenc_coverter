<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.currency.exchanger">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.currency.exchanger.presentation.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_attach_money_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_attach_money_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanArchitectureExercise">
        <activity
            android:name="com.currency.exchanger.presentation.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CleanArchitectureExercise.NoActionBar"
            android:exported="true" />
        <activity
            android:name="com.currency.exchanger.presentation.spalash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CleanArchitectureExercise.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>